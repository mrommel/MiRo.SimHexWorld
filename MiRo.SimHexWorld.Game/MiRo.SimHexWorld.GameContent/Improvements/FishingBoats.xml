      <Production>0</Production>
      <Commercial>0</Commercial>
    </Bonus>
    <ImprovesResources>
      <Item>
        <Ressource>Fish</Ressource>
        <Bonus>
          <Food>1</Food>
          <Production>0</Production>
          <Commercial>0</Commercial>
        </Bonus>
      </Item>
      <Item>
        <Ressource>Whales</Ressource>
        <Bonus>
          <Food>1</Food>
          <Production>0</Production>
          <Commercial>1</Commercial>
        </Bonus>
      </Item>
